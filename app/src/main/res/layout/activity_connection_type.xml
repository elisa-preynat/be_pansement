<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConnectionType">

    <TextView
        android:id="@+id/typeDeConnexion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginTop="27dp"
        android:fontFamily="@font/mada_black"
        android:text="Type de connexion"
        android:textColor="@color/darkBlueApp"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/icn_connexion_typeDeCo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/typeDeConnexion"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_online_prediction_60" />

    <Button
        android:id="@+id/btn_nfc"
        android:layout_width="110dp"
        android:layout_height="120dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/lightBlueApp"
        android:textAllCaps="false"
        app:cornerRadius="20dp"
        app:icon="@drawable/ic_baseline_nfc_80"
        app:iconTint="@color/darkBlueApp"
        app:layout_constraintBottom_toTopOf="@+id/txt_NFC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="@color/darkBlueApp"
        app:strokeWidth="10px"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/btn_bluetooth"
        android:layout_width="110dp"
        android:layout_height="120dp"
        android:layout_marginTop="84dp"
        android:backgroundTint="@color/lightBlueApp"
        app:cornerRadius="20dp"
        app:icon="@drawable/ic_baseline_bluetooth_connected_80"
        app:iconTint="@color/darkBlueApp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/typeDeConnexion"
        app:strokeColor="@color/darkBlueApp"
        app:strokeWidth="10px"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/txt_NFC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="212dp"
        android:fontFamily="@font/mada_black"
        android:text="NFC"
        android:textColor="@color/darkBlueApp"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txt_Bluetooth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/mada_black"
        android:text="Bluetooth"
        android:textColor="@color/darkBlueApp"
        android:textSize="28sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_nfc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_bluetooth"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>